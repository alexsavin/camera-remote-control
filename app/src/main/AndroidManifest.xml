<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fuckolympus.arc">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ShutterActivity"
                android:label="@string/app_name_shutter"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".MenuActivity"
                android:label="@string/app_name_main_menu"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".EclipseMenuActivity"
                android:label="@string/app_name_eclipse_menu"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ImagesActivity"
                android:label="@string/app_name_images"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/app_name_settings"
                android:screenOrientation="portrait">
        </activity>
        <activity android:name=".EclipseActivity"
                  android:label="@string/app_name_eclipse"
                  android:screenOrientation="portrait">
        </activity>

        <service
                android:name=".service.ShootingIntentService"
                android:exported="false">
        </service>
    </application>

</manifest>
