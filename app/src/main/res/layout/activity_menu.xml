<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fuckolympus.arc.MenuActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:weightSum="1"
            android:id="@+id/menuLayout">
        <Button
                android:text="@string/shutter_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/shutterActivityButton" android:drawableLeft="@drawable/shutter_48"
                android:drawableStart="@drawable/shutter_48"/>
        <Button
                android:text="@string/images_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/imagesActivityButton" android:drawableLeft="@drawable/images_48"
                android:drawableStart="@drawable/images_48"/>
        <Button
                android:text="@string/eclipse_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/eclipseButton" android:drawableLeft="@drawable/eclipse_48"
                android:drawableStart="@drawable/eclipse_48"/>
        <Button
                android:text="@string/settings_btn"
                android:layout_width="match_parent"
                android:id="@+id/settingsButton"
                android:layout_height="72dp" android:drawableLeft="@drawable/settings" android:drawableStart="@drawable/settings"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/power_off" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:id="@+id/powerOffButton" android:contentDescription="@string/poff_icon_descr"/>
</RelativeLayout>
