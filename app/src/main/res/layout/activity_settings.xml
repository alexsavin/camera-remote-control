<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fuckolympus.arc.SettingsActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/settingsLayout1">
        <TextView
                android:text="@string/totality_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/totalityTimeLabel" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/totalityTimeEdit" android:layout_weight="1"
        />
    </LinearLayout>
    <TextView
            android:text="@string/part_phase_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/partPhaseLabel"
            android:layout_marginTop="49dp" android:layout_below="@+id/settingsLayout1" android:layout_centerHorizontal="true"/>
</RelativeLayout>
